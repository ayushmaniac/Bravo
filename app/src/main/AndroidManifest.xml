<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.realcrap.bravo">

    <application
        android:name=".di.application.BravoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.checkout.paymentstatus.PaymentStatusFailure"></activity>
        <activity android:name=".ui.checkout.paymentstatus.PaymentStatus" />
        <activity android:name=".ui.uploadpic.UploadPicture" />
        <activity android:name=".ui.forgotpassword.changepassword.ChangePassword" />
        <activity android:name=".ui.editprofile.EditProfile" />
        <activity android:name=".ui.checkout.Checkout" />
        <activity android:name=".ui.buisnesspage.Buisness" />
        <activity android:name=".ui.allsalons.AllSalons" />
        <activity android:name=".ui.bookingdetails.BookingDetails" />
        <activity android:name=".ui.contactus.ContactUs" />
        <activity android:name=".ui.notification.Notifications" />
        <activity android:name=".ui.mybooking.MyBookings" />
        <activity android:name=".ui.setuppassword.CreatePassword" />
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".ui.forgotpassword.ForgotPassword" />
        <activity android:name=".ui.signup.Registration" />
        <activity android:name=".ui.loginemail.LoginEmail" />
        <activity android:name=".ui.location.Location">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ui.splash.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.Login" />

        <service android:name=".service.FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>