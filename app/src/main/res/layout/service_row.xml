<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/serviceImage"
        android:layout_width="80dp"
        android:src="@drawable/monalisabg"
        android:scaleType="fitXY"
        android:layout_height="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/serviceImage"
        android:fontFamily="@font/poppins"
        android:id="@+id/tvserviceName"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:text="Normal Hair Cut"/>

    <TextView
        android:layout_width="160dp"
        android:layout_below="@id/tvserviceName"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/serviceImage"
        android:fontFamily="@font/poppins"
        android:id="@+id/tvserviceDesc"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"
        android:text="Normal Hair Cut"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/tvserviceDesc"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/serviceImage"
        android:fontFamily="@font/poppins"
        android:id="@+id/tvservicePrice"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:text="Rs. 120"/>






    <Button
        android:id="@+id/bookServiceButton"
        android:layout_below="@id/tvserviceName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:text="Book"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:background="#8BC34A"
        android:textSize="10dp"
        />


    <TextView
        android:id="@+id/serviceTimeSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookServiceButton"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/poppins"
        android:text="3:00"
        android:textSize="10sp" />



</RelativeLayout>