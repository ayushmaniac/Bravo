<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookMerchantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/colorAccent"
        android:text="Meenakshi Salon and Spa"/>

    <TextView
        android:id="@+id/bookMerchandAddress"
        android:layout_below="@id/bookMerchantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samta Colony, Raipur"/>

    <TextView
        android:id="@+id/bookMerchantAmount"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bookMerchandAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="800 INR"/>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@id/bookMerchantAmount"
        android:id="@+id/bookLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/line" />


    <TextView
        android:id="@+id/bookMerchantServices"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bookLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair Cut @ 3:00PM"/>

    <TextView
        android:text="2 Feb, 2020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookMerchantServices"/>


</RelativeLayout>